        <title>
        </title>
      
        <link rel="stylesheet" href="css/app.css" />
        <link rel="stylesheet" href="css/ratchet-patch.css" />
        <link rel="stylesheet" href="css/style.css" />

        <script src="/bower_components/jquery/jquery.js"></script>
        <script src="/bower_components/underscore/underscore.js"></script>
        <script src="/bower_components/fastclick/lib/fastclick.js"></script>
        

        <script src="http://api.map.baidu.com/api?v=1.2&ak=E4805d16520de693a3fe707cdc962045"></script>
        <script src="http://api.map.baidu.com/library/MarkerManager/1.2/src/MarkerManager_min.js"></script>

        <script src="js/jstorage.min.js"></script>
        <script src="js/jquery.blockUI.js"></script>
        <script src="js/jquery-plugin.js"></script>
        <script src="js/ratchet-patch.js"></script>
        <script src="js/food-map.js"></script>
        <script src="js/utils.js"></script>
